<odoo>
    <template id="report_product">
        <t t-call="web.html_container">

<table class="table">
  <thead>
    <tr>
      <th scope="col">product</th>


    </tr>
  </thead>
  <tbody>
       <t t-foreach="product" t-as="l">
            <tr>
              <td> <t t-esc="l.name"/></td>

            </tr>
       </t>


  </tbody>
</table>

        </t>
    </template>

    <report
            id="action_report_product"
            model="product.template"
            report_type="qweb-html"
            string="product name"
            name="send_an_email_with_pdf_attachment.report_product"
            file="send_an_email_with_pdf_attachment.report_product"
    />
</odoo>